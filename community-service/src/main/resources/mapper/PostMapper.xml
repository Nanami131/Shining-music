<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.L2.community.infrastructure.mapper.PostMapper">
    <resultMap id="PostResultMap" type="org.L2.community.domain.model.Post">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="likes" column="likes"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectById" resultMap="PostResultMap">
        SELECT * FROM posts WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="org.L2.community.domain.model.Post" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO posts (user_id, title, content, likes, status, created_at, updated_at)
        VALUES (#{userId}, #{title}, #{content}, #{likes}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="org.L2.community.domain.model.Post">
        UPDATE posts
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="likes != null">likes = #{likes},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM posts WHERE id = #{id}
    </delete>

    <select id="query" resultMap="PostResultMap">
        SELECT * FROM posts
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="title != null">
                AND title LIKE CONCAT('%', #{title}, '%')
            </if>
            <if test="content != null">
                AND content LIKE CONCAT('%', #{content}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createdAt != null">
                AND created_at >= #{createdAt}
            </if>
        </where>
    </select>
</mapper>