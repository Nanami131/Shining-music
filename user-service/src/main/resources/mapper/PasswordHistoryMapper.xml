<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.L2.user.mapper.PasswordHistoryMapper">
    <resultMap id="PasswordHistoryResultMap" type="org.L2.user.domain.model.PasswordHistory">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insert" parameterType="org.L2.user.domain.model.PasswordHistory">
        INSERT INTO password_history (user_id, password, salt, created_at)
        VALUES (#{userId}, #{password}, #{salt}, #{createdAt})
    </insert>

    <select id="queryByUserId" resultMap="PasswordHistoryResultMap">
        SELECT * FROM password_history WHERE user_id = #{userId}
    </select>
</mapper>